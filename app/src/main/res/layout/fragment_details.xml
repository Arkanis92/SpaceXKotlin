<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.DetailsFragment">

        <ImageView
            android:id="@+id/ivDetailsImage"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@color/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDetailsMissionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mission Name"
            android:textSize="35sp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDetailsImage" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDetailsRocketName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rocket Name"
            android:textSize="35sp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDetailsMissionName" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDetailsLaunchSite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Launch Site Name"
            android:textSize="30sp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDetailsRocketName" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDetailsLaunchDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01-01-01"
            android:textSize="25sp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDetailsLaunchSite" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDetailsTextDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/details_placeholder_text"
            android:textSize="18sp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDetailsLaunchDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
